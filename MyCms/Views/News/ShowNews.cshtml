    </form>
</section>

<script>
    function addComment() {
        $.ajax({
            url: "/News/AddComment/" +@Model.PageId,
            type: "Get",
            data: { name: $("#txtName").val(), email: $("#txtEmail").val(), comment: $("#txtComment").val() }

        }).done(function () {
            $("#txtName").val("");
            $("#txtEmail").val("");
            $("#txtComment").val("");
        });

    }
</script>
