@model IEnumerable<DataLayer.Page>

@{
    ViewBag.Title = "Index";
}



<p>
    <a class="btn btn-success" href="/Admin/Pages/Create">تولید خبر جدید</a>    
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageGroup.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Visit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowInSlider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreaetDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/PageImages/@item.ImageName" class="thumbnail" style="max-width:120px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ShortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Visit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowInSlider)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.CreaetDate)*@
            @item.CreaetDate.ToShamsi()
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.PageId }) |
            @Html.ActionLink("Details", "Details", new { id = item.PageId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PageId })*@
            <a class="btn btn-sm btn-Primary" href="/Admin/Pages/Details/@item.PageId">
                <i class="glyphicon glyphicon-list"></i>
            </a>
            <a class="btn btn-sm btn-warning" href="/Admin/Pages/Edit/@item.PageId">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a class="btn btn-sm btn-danger" href="/Admin/Pages/Delete/@item.PageId">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>

    </tr>
}

</table>
